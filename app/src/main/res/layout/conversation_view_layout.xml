<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagesList"
        android:layout_above="@+id/messageSendText" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/messageSendText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/messageReplyButton"
        android:layout_toLeftOf="@+id/messageReplyButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:id="@+id/messageReplyButton"
        android:layout_alignBottom="@+id/messageSendText"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Senden"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_send" />
</RelativeLayout>