<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cards"
    android:id="@+id/terminalView"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_accent"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_text"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/mytfg_title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author_date_text"
            android:layout_below="@+id/title_text"
            android:textSize="@dimen/mytfg_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edited_date_text"
            android:layout_below="@+id/author_date_text"
            android:textSize="@dimen/mytfg_small"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flags_text"
            android:layout_below="@+id/edited_date_text"
            android:textSize="@dimen/mytfg_small"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>