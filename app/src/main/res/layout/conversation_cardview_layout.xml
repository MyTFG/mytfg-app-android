<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cards"
    android:id="@+id/conversationCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_accent"
        android:padding="16dp"
        android:id="@+id/conversation_wrapper"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/conversationTitle"
            android:textSize="@dimen/mytfg_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="TestTitle"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/conversationText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/conversationTitle"
            android:layout_alignStart="@+id/conversationTitle"
            android:layout_below="@+id/conversationTitle"
            android:textSize="@dimen/mytfg_text" />
    </RelativeLayout>


</android.support.v7.widget.CardView>