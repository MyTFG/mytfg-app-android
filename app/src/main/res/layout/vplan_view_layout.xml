<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vplanView"
    style="@style/cards">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_accent"
        android:padding="16dp">

        <TextView
            android:id="@+id/lesson_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/mytfg_header"
            android:paddingRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lesson_text"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/regular_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regular_headline"
                android:textSize="@dimen/mytfg_text" />

            <TextView
                android:id="@+id/regular_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mytfg_header"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/substitution_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/substitution_headline"
                android:textSize="@dimen/mytfg_text" />

            <TextView
                android:id="@+id/substitution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mytfg_header"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/comment_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment_headline"
                android:textSize="@dimen/mytfg_text" />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mytfg_header"
                android:paddingLeft="16dp"/>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>